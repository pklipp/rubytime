<!-- List of roles -->
<div class="fieldsets">
    <fieldset>
        <legend>List of roles</legend>
        
        <p class="p_new">
        <%= link_to 'New role', :action => 'new' %>
        </p>
        <hr/>
        <table class="standard">
        <tr>
            <th>Name</th>
            <th>Short name</th>
            <th>Admin</th>
        </tr>
  
        <% for role in @roles %>
        <tr>
            <td><%= h role.name %></td>
            <td style="text-align: center"><%= h role.short_name.upcase %></td>
            <td style="text-align: center"><% if role.is_admin==true %>X<% end %>
            </td>
            
            <td><%= link_to 'Show', :action => 'show', :id => role %></td>
        <td><%= link_to 'Edit', :action => 'edit', :id => role %></td>
        </tr>
        <% end %>
        </table>
        <% if (@role_pages.current.next || @role_pages.current.previous) %>
        <p>
        <%= link_to 'Previous page', { :page => @role_pages.current.previous } if @role_pages.current.previous %>
        <%= link_to 'Next page', { :page => @role_pages.current.next } if @role_pages.current.next %> 
        </p>
        <% end %>
    </fieldset>
    
   <p><%= link_to 'Back', @request.env['HTTP_REFERER'] %></p>
</div>
<!-- End of list -->
