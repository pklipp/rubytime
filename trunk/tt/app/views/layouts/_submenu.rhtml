
<!-- Submenu. Content depends on user's privileges -->
<% if (!@current_user.nil? && !@current_user.is_inactive)  %>
    <ul>
        <li>  
        <%= link_to("Your data",{:controller => "your_data"},
                          :class=> ( params[:controller]=="your_data" ?  "active" : "") ) %>
        </li> 
        
        <% if @current_user.has_permisions_to("clients", "list") %>
        <li>
        <%= link_to("Clients",
                        {:controller => "clients", :action => "list"}, 
                        :class=> ( params[:controller]=="clients" ?  "active" : "") ) %>
        </li>
        <% end 
        if @current_user.has_permisions_to("projects", "list") %>
        <li>
        <%= link_to("Projects",
                          {:controller => "projects", :action => "list"}, 
                          :class=> ( params[:controller]=="projects" ?  "active" : "")) %>
        </li> 
        <%end 
        if @current_user.has_permisions_to("activities", "list") %>
        <li>  
        <%= link_to("Activities",
                            {:controller => "activities", :action => "list"}, 
                            :class=> ( params[:controller]=="activities" ?  "active" : ""))  %>
        </li>  
        <%end 
        if @current_user.has_permisions_to("users", "list") %>
        <li>  
        <%= link_to("Users",
                            {:controller => "users", :action => "list"}, 
                            :class=> ( params[:controller]=="users" ?  "active" : "")) %>
        </li>
        <%end 
        if @current_user.has_permisions_to("roles", "list") %>
        <li>  
        <%= link_to("Roles",
                            {:controller => "roles", :action => "list"}, 
                            :class=> ( params[:controller]=="roles" ?  "active" : "")) %>
        </li>  
        <%end %>
        </ul>
<% end %>
<!-- End of submenu -->