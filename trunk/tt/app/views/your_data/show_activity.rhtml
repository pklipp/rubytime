<!-- List of details of chosen activity -->
<div class="fieldsets">
<fieldset>
    <legend>	Your activity</legend>
    <% for column in Activity.content_columns %>
    <p>
    <b><%= column.human_name %>:</b> <%=h @activity.send(column.name) %>
    </p>
    <% end %>

    <p class="	p_edit_back">
       <% unless @activity.invoice_id -%>
       <%= link_to 'Edit', :action => 'edit_activity', :id => @activity %> |
       <% end -%>
    <%= link_to 'Back', @request.env['HTTP_REFERER'] %>
    </p>
</fieldset>
<!-- End of list -->