<!-- Form: Add invoice -->
<%= error_messages_for 'invoice' %>
<div class="fieldsets">
    <fieldset>
        <legend>New invoice</legend>
        
        <% form_tag({:action => 'create'}) do %>
            <%= render_partial 'form' %>
            <p><%= submit_tag "Create" %></p>
        <% end %>
        
    </fieldset>
</div>
<p><%= link_to 'Back', request.env['HTTP_REFERER'] if request.env['HTTP_REFERER']%></p>
<!-- End of form -->
